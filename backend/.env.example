# Application Settings
APP_NAME=Bank Statement Parser
VERSION=1.0.0
SECRET_KEY=your-secret-key-here-change-in-production
ENVIRONMENT=development
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=5000

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./database.db

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=.pdf

# Groq API Settings (Required for LLM agents)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.2-11b-vision-preview
GROQ_TEMPERATURE=0.1
GROQ_MAX_TOKENS=8192
GROQ_REQUEST_TIMEOUT=120

# OlmOCR Settings (Required for OCR extraction)
OLMOCR_BASE_URL=http://localhost:8000
OLMOCR_REQUEST_TIMEOUT=300
OLMOCR_MAX_RETRIES=3
OLMOCR_RETRY_DELAY=1.0

# Processing Settings
CLEANUP_TEMP_FILES=True
ENABLE_BACKGROUND_PROCESSING=True

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=30
LOG_FORMAT=json

# Confidence Scoring Settings
CONFIDENCE_THRESHOLD=0.70
HEURISTIC_WEIGHT=0.6
VLM_WEIGHT=0.4

# PII Settings
MASK_PII=True
PII_MASK_CHAR=X
PII_SHOW_LAST=4

# PDF Processing Settings
PDF_DPI=300
PDF_IMAGE_FORMAT=PNG
